config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind right:shift;alt       resize +03% +0
bind left:shift;alt        resize -03% +0
bind up:shift;alt          resize +0   -03%
bind down:shift;alt        resize +0   +03%
# bind right:ctrl;alt  resize -10% +0 bottom-right
# bind left:ctrl;alt   resize +10% +0 bottom-right
# bind up:ctrl;alt     resize +0   +10% bottom-right
# bind down:ctrl;alt   resize +0   -10% bottom-right

# Push Bindings
# bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
# bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
# bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
# bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings -- move window around
bind right:shift;cmd nudge +03% +0
bind left:shift;cmd  nudge -03% +0
bind up:shift;cmd    nudge +0   -03%
bind down:shift;cmd  nudge +0   +03%

# Throw Bindings -- switch screen display
# bind 1:ctrl;alt         throw 0 resize
# bind 2:ctrl;alt         throw 1 resize
# bind 3:ctrl;alt         throw 2 resize

bind right:cmd;ctrl throw right resize
bind left:cmd;ctrl  throw left  resize
bind up:cmd;ctrl    throw up    resize
bind down:cmd;ctrl  throw 1  resize
bind pad0:ctrl;cmd throw left resize
bind pad.:ctrl;cmd throw right  resize

bind 0:ctrl;alt throw left resize
bind .:ctrl;alt throw right  resize
# Focus Bindings
bind pad8:cmd;ctrl focus up
bind pad2:cmd;ctrl focus down
bind up:cmd;ctrl;alt  focus behind
bind down:cmd;ctrl;alt focus behind
bind left:cmd;ctrl;alt focus left
bind right:cmd;ctrl;alt focus right


# Window Hints
bind esc:cmd hint

# Unity-style Bindings
bind 1:cmd;alt      corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind 2:cmd;alt      push bottom bar-resize:screenSizeY/2
bind 3:cmd;alt      corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind 4:cmd;alt      push left bar-resize:screenSizeX/2
bind 5:cmd;alt      push top bar-resize:screenSizeY
bind 6:cmd;alt      push right bar-resize:screenSizeX/2
bind 7:cmd;alt      corner top-left resize:screenSizeX/2;screenSizeY/2
bind 8:cmd;alt      push top bar-resize:screenSizeY/2
bind 9:cmd;alt      corner top-right resize:screenSizeX/2;screenSizeY/2

bind pad1:ctrl;alt      push left bar-resize:screenSizeX/3
bind pad2:ctrl;alt      push bottom bar-resize:screenSizeY/2
bind pad3:ctrl;alt      push right bar-resize:screenSizeX/1.5
bind pad4:ctrl;alt      push left bar-resize:screenSizeX/2
bind pad5:ctrl;alt      push top bar-resize:screenSizeY
bind pad6:ctrl;alt      push right bar-resize:screenSizeX/2
bind pad7:ctrl;alt      corner top-left resize:screenSizeX/2;screenSizeY/2
bind pad8:ctrl;alt      push top bar-resize:screenSizeY/2
bind pad9:ctrl;alt      corner top-right resize:screenSizeX/2;screenSizeY/2
