# Open up last note in vim
function notes () {
  vim_cmd="$(which gvim || which mvim || which vim)"
  last_note=$(cd $NOTES_DIR; ls -td $(find . -type f) 2> /dev/null | head -n 1) &&
  $vim_cmd $NOTES_DIR/$last_note -c ":NERDTree $NOTES_DIR" -c "wincmd p"
}

