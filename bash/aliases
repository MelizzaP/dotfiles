####### Linux-Mac Compatibility ###########
platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
  alias pbcopy="xsel -b"

  if [ -f /usr/local/bin/gvim ];
  then
    function gvim () { (/usr/local/bin/gvim -f "$@" &) }
    alias mvim='gvim'
  else
    function gvim () { (/usr/bin/gvim -f "$@" &) }
  fi

  alias open='gnome-open'
  alias ls='ls --color="auto" -F'
fi


